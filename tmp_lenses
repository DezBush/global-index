import PropTypes from "prop-types";

const Lenses = ({ indicators, selectedIndicator, onSelectIndicator }) => {
  return (
    <div className="grid text-center">
      <h2 className="text-lg font-bold mb-4">Indicators</h2>
      <div className="space-y-4">
        {indicators.map((indicator) => (
          <div
            key={indicator}
            className={`cursor-pointer p-4 text-center text-sm font-medium rounded-lg border-2 transition-all ${
              selectedIndicator === indicator
                ? "bg-blue-500 text-white border-blue-600"
                : "bg-gray-200 text-gray-800 border-gray-300"
            } hover:bg-blue-200 hover:text-white`}
            onClick={() => onSelectIndicator(indicator)}
          >
            {indicator}
          </div>
        ))}
      </div>
    </div>
  );
};

Lenses.propTypes = {
  indicators: PropTypes.arrayOf(PropTypes.string).isRequired,
  selectedIndicator: PropTypes.string,
  onSelectIndicator: PropTypes.func.isRequired,
};

export default Lenses;
